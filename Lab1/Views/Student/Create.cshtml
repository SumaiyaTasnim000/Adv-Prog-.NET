


<h2>Create</h2>
<form method="post">
    <input type="text" value="@Model.Name" name="Name" class="form-control" placeholder="Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span><br />
    <input type="text" value="@Model.Id" name="Id" class="form-control" placeholder="Id" />
    <span class="text-danger">@Html.ValidationMessage("Id")</span><br />
    <input type="date" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" name="DateOfBirth" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("DateOfBirth")</span><br />

    <input type="submit" value="Create" class="btn btn-success" />
</form>

